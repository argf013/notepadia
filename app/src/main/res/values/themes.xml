<resources>
    <!-- Base application theme. -->
    <style name="Theme.Notepadia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/normalItems</item>
        <item name="colorPrimaryVariant">@color/selectedItemBackground</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/selectedItemBackground</item>
        <item name="colorSecondaryVariant">@color/selectedItemBackground</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:titleTextStyle">@color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/MyTheme</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EditNoteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set windowActionBar to false to use Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> <!-- If you want to remove the title bar -->
    </style>

    <style name="MyTheme" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/three_dot</item>
    </style>
</resources>